.header
	width 100%

	@media $lg
		position relative
		z-index 1

	@media $md
		z-index 0

	&__container
		width 100%
		max-width: 1440px
		margin: 0 auto
		padding: 35px 80px 30px 35px
		display flex
		justify-content: space-between
		min-height: 182px

		@media $l-md
			padding: 35px

		@media $md
			padding 0

		@media $sm
			min-height 105px

	&__logo
		max-width: 23px
		align-self: flex-start

		@media $md
			margin: 35px

		@media $sm
			margin: 16px 0 0 20px

	&__btn-wrap
		width 50%
		display flex
		justify-content: flex-end
		position relative

		&::before
			@media $md
				content: ''
				width 100%
				height 100%
				display block
				border-left: 1px solid $black
				border-bottom: 1px solid $black
				position absolute
				right 0
				top 0
				transform: skewY(10deg)

		@media $sm
			width 48%

	&__burger-btn
		display flex
		align-items: center
		justify-content center
		flex-direction: column
		background: 0
		border: 0
		width 52px
		height 52px
		border-image url(/img/border-img.png) 29 fill / 54px / 0px round
		align-self: flex-end

		& span
			width 20px
			height 2px
			background-color: $black
			display block

			&:not(:last-child)
				margin-bottom 3px

				@media $l-md
					margin 0

		@media $lg
			align-self: flex-start

		@media $l-md
			border: 0
			width 22px
			height 16px
			justify-content: space-around

		@media $md
			margin 35px

		@media $sm
			margin: 19px 20px
