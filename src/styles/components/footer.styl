.footer
	width 100%
	background: transparent
	min-height 85px

	&__container
		width 100%
		max-width: 1440px
		height 100%
		padding: 0 192px
		margin: 0 auto
		position relative
		display flex
		justify-content: space-between
		align-items: center

	&__img
		width 100%
		max-width: 215px
		position absolute
		bottom 100%
		right calc(50% - (215px / 2))
		border-bottom: 9px solid $yellow
		z-index 10

	&__text-box
		display flex
		align-items: center
		justify-content: center
		width calc(50% - 160px)
		position relative
		height 100%

	&__symbol
		fill: $black
		position: absolute
		line-height 0

	&__symbol--light
		fill $white
		stroke: $black

	&__symbol--opacity
		opacity: 0.3
		stroke: $black

	&__symbol--top-left
		left: 0
		bottom: calc(100% - 1px)

	&__letter
		font-family: $Philosopher
		font-weight 700
		color $black
		text-transform: uppercase
		font-size 25px
		line-height 30px
		position absolute

		&[data-val='A0']
			bottom 34%
			left 20.5%

		&[data-val='F1']
			bottom 76%
			left: 38%

		&[data-val='F2']
			bottom 23%
			left 55.3%

		&[data-val='I']
			bottom 57%
			left: 71.2%

			& + .footer__symbol--light
				position: absolute
				height 100%
				left 70.5%
				overflow: hidden

				& svg
					transform: translateY(282%)

		&[data-val='N']
			left 89.5%
			bottom 9%

		&[data-val='A']
			bottom 59%
			left: 13.8%

			& + .footer__symbol--light
				left 23%
				bottom 27%

		&[data-val='G']
			left 41%
			bottom 50%

			& + .footer__symbol--opacity
				left: 39%
				bottom 50%

		&[data-val='E']
			left 71.5%
			bottom 18%

			& + .footer__symbol
				left 87%
				bottom 49%
