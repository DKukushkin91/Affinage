.footer
	width 100%
	background: transparent
	min-height 85px

	@media $l-md
		min-height: auto

	@media $sm
		position fixed
		bottom: 0
		z-index 99999

	&__container
		width 100%
		max-width: 1440px
		height 100%
		padding: 0 192px
		margin: 0 auto
		position relative
		display flex
		justify-content: space-between
		align-items: center

		@media $xl
			padding: 0 40px

	&__img
		width 100%
		max-width: 215px
		position absolute
		bottom 100%
		right calc(50% - (215px / 2))
		border-bottom: 9px solid $yellow
		z-index 10

		@media $l-md
			border: 0
			position fixed
			bottom 0
			left calc(50% - 90px)
			max-width: 180px

		@media $sm
			bottom: -22px
			left calc(50% - 145px / 2)
			max-width: 145px

	&__text-box
		display flex
		align-items: center
		justify-content: center
		width calc(50% - 160px)
		position relative
		height 100%

		@media $lg
			width: calc(50% - 60px)

		@media $l-md
			display: none

		@media $sm
			display block

	&__symbol
		fill: $black
		position: absolute
		line-height 0

	&__symbol--light
		fill $white
		stroke: $black

	&__symbol--opacity
		opacity: 0.3
		stroke: $black

	&__symbol--top-left
		left: 0
		bottom: calc(100% - 1px)

		@media $sm
			display: none

	&__letter
		font-family: $Philosopher
		font-weight 700
		color $black
		text-transform: uppercase
		font-size 25px
		line-height 30px
		position absolute

		&[data-val='A0']
			bottom 34%
			left 20.5%

		&[data-val='F1']
			bottom 76%
			left: 38%

		&[data-val='F2']
			bottom 23%
			left 55.3%

		&[data-val='I']
			bottom 57%
			left: 71.2%

			& + .footer__symbol--light
				position: absolute
				height 100%
				left 70.5%
				overflow: hidden

				@media $sm
					height 25px
					left: 4px
					bottom 28px
					z-index 9999

				& svg
					transform: translateY(282%)

					@media $sm
						transform: translateY(0)
						height 25px
						fill: transparent

		&[data-val='N']
			left 89.5%
			bottom 9%

		&[data-val='A']
			bottom 59%
			left: 13.8%

			& + .footer__symbol--light
				left 23%
				bottom 27%

				@media $sm
					display: none

		&[data-val='G']
			left 41%
			bottom 50%

			& + .footer__symbol--opacity
				left: 39%
				bottom 50%

				@media $sm
					display: none

		&[data-val='E']
			left 71.5%
			bottom 18%

			& + .footer__symbol
				left 87%
				bottom 49%

				@media $sm
					position fixed
					left: 84%
					bottom 56%

		@media $sm
			display none
