@keyframes slide-active
	0%
		clip-path: polygon(0% 0, 0% 0, 0% 0, 0% 0);

	50%
		clip-path: polygon(100% 0, 100% 0, 100% 100%, 0% 100%);

	100%
		clip-path: polygon(0 0, 100% 0, 100% 100%, 0% 100%);

@keyframes slide
	0%
		clip-path: polygon(0% 0, 0% 0, 0% 0, 0% 0);

	50%
		clip-path: polygon(0 0, 100% 0, 50% 50%, 0 100%);

	100%
		clip-path: polygon(0 0, 100% 0, 100% 100%, 0% 100%);
